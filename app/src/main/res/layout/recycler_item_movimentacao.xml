<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/imgMovimentacaoIcon"
        android:src="@drawable/ic_dinheiro_black"
        android:layout_marginEnd="10dp"
        android:layout_width="@dimen/item_movimentacao_icon"
        android:layout_height="@dimen/item_movimentacao_icon" />

    <TextView
        android:layout_toEndOf="@id/imgMovimentacaoIcon"
        android:id="@+id/lblMovimentacaoDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compra dos TÃªnis de Beto"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_movimentacao_descricao_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgMovimentacaoIcon"
        android:layout_below="@id/lblMovimentacaoDescricao"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblMovimentacaoData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01/02/2016"
            android:textColor="@color/item_movimentacao_data"
            android:textSize="@dimen/item_movimentacao_secundario_text_size" />

        <TextView
            android:id="@+id/lblMovimentacaoPessoa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Humberto"
            android:textAlignment="center"
            android:textColor="@color/item_movimentacao_pessoa"
            android:textSize="@dimen/item_movimentacao_secundario_text_size" />

        <TextView
            android:id="@+id/lblMovimentacaoValor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$ 160,00"
            android:textAlignment="viewEnd"
            android:textColor="@color/item_movimentacao_valor"
            android:textSize="@dimen/item_movimentacao_secundario_text_size" />
    </LinearLayout>


</RelativeLayout>