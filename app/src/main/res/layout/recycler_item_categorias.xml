<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imgIcone"
        android:src="@drawable/ic_dinheiro_black"
        android:layout_marginEnd="10dp"
        android:layout_width="@dimen/item_movimentacao_icon"
        android:layout_height="@dimen/item_movimentacao_icon" />

    <TextView
        android:layout_toEndOf="@id/imgIcone"
        android:id="@+id/lblDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compra dos TÃªnis de Beto"
        android:textColor="@android:color/black"
        android:textSize="@dimen/item_movimentacao_descricao_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imgIcone"
        android:layout_below="@id/lblDescricao"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lblSaldo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="R$ 160,00"
            android:textAlignment="viewEnd"
            android:textColor="@color/item_movimentacao_valor"
            android:textSize="@dimen/item_movimentacao_secundario_text_size" />
    </LinearLayout>


</RelativeLayout>